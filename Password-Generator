#generate passwords that are tough to crack!

import random

lower_case = "abcdefghijklmnopqrstuvwxyz"
upper_case = "ABCDEFGHIJKLMNOPQRSTUVWXYZ"
num = "0123456789"
symbols = "!@#$%&?+_=-~/"

ans = lower_case + upper_case + num + symbols
length_for_pass = 12

password = "".join(random.sample(ans, length_for_pass))

print("Your Generated Password is :", password)
